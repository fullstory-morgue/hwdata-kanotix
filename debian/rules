#!/usr/bin/make -f
# Sample debian/rules that uses debhelper.
# GNU copyright 1997 to 1999 by Joey Hess.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

configure: configure-stamp
configure-stamp:
	dh_testdir
	# Add here commands to configure the package.
	

	touch configure-stamp

build: configure-stamp build-stamp
build-stamp:
	dh_testdir

	# Add here commands to compile the package.

	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp

	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	# Add here commands to install the package into debian/kudzu.
	install -d -m 755 $(CURDIR)/debian/hwdata-kanotix/usr/share/hwdata
	install -m 644 CardMonitorCombos Cards MonitorsDB pci.ids pcitable upgradelist usb.ids $(CURDIR)/debian/hwdata-kanotix/usr/share/hwdata/
	rm -f $(CURDIR)/debian/hwdata-kanotix/usr/X11R6/lib/X11/Cards
	rm -f $(CURDIR)/debian/hwdata-kanotix/etc/pcmcia/config

	# Remove problematic hardware IDs/ add custom IDs
	grep -v -E '0x1244[[:space:]]0x0[ae]00|btaudio|0x1102[[:space:]]0x000[68]|tg3|r8180|sk98lin|snd-' $(CURDIR)/pcitable > $(CURDIR)/debian/hwdata-kanotix/usr/share/hwdata/pcitable
	# we do that before compiling: cd debian/create-addon.sh
	[ -f $(CURDIR)/debian/pcitable-kanotix.auto ] && \
		grep -v -E '0x1244[[:space:]]0x0[ae]00|btaudio|0x1102[[:space:]]0x000[68]|aic7xxx|tg3|r8180|sk98lin|snd-' $(CURDIR)/pcitable > $(CURDIR)/debian/hwdata-kanotix/usr/share/hwdata/pcitable  && \
		cat $(CURDIR)/debian/pcitable-kanotix.auto >> $(CURDIR)/debian/hwdata-kanotix/usr/share/hwdata/pcitable
	[ -f $(CURDIR)/debian/pcitable-kanotix ] && cat $(CURDIR)/debian/pcitable-kanotix >> $(CURDIR)/debian/hwdata-kanotix/usr/share/hwdata/pcitable
	# we do that before compiling: [ -x $(CURDIR)/debian/create-addon.sh ] && $(CURDIR)/debian/create-addon.sh

# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
#	dh_installdebconf	
	dh_installdocs
	dh_installexamples
	dh_installmenu
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_installinit
	dh_installcron
	dh_installman
	dh_installinfo
#	dh_undocumented
	dh_installchangelogs 
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
#	dh_makeshlibs
	dh_installdeb
#	dh_perl
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
